{
  "name": "arcsat-crm",
  "version": "1.0.0",
  "description": "Sistema de Gestão Empresarial - ArcSat",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:debug": "tsx watch --inspect src/server.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "typecheck": "tsc --noEmit",
    "frontend:dev": "cd frontend/arcsat-landing && npm run dev",
    "frontend:build": "cd frontend/arcsat-landing && npm run build",
    "docs:serve": "docsify serve docs",
    "azure:install": "npm ci --production",
    "azure:start": "node src/server.js",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "keywords": [
    "crm",
    "erp",
    "gestao",
    "empresarial",
    "azure",
    "nodejs",
    "mongodb"
  ],
  "author": "Ávila Inc <nicolas@avila.inc>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "axios": "^1.7.7",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "validator": "^13.12.0",
    "zod": "^3.23.8",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.14.0",
    "applicationinsights": "^2.9.5"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "tsx": "^4.17.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/validator": "^13.12.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.0",
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.2.4",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avilaops/ArcSat.git"
  }
}
