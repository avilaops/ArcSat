# Azure AI Foundry Environment Variables
# Add these to your .env file for local development
# and configure as secrets in production

# Azure AI Services
AZURE_OPENAI_ENDPOINT=https://arcsat-resource.cognitiveservices.azure.com/
AZURE_AI_KEY=your-azure-ai-key-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Face API Configuration  
AZURE_FACE_ENDPOINT=https://face-api-avila.cognitiveservices.azure.com/
AZURE_FACE_KEY=your-face-api-key-here

# AI Model Deployments
AI_CHAT_DEPLOYMENT=gpt-4o-mini
AI_EMBEDDINGS_DEPLOYMENT=cohere-embed-v3
AI_REASONING_DEPLOYMENT=o1-mini
AI_PII_DEPLOYMENT=text-pii
AI_LANGUAGE_DEPLOYMENT=language-detection

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_PII_DETECTION=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_AI_ANALYTICS=true
ENABLE_LANGUAGE_DETECTION=true

# Rate Limiting
AI_RATE_LIMIT_REQUESTS=100
AI_RATE_LIMIT_WINDOW=60000

# Logging
AI_LOG_LEVEL=info
AI_LOG_REQUESTS=true