# ArcSat Industrial - Gestão de Clientes
# Configuração das variáveis de ambiente

# Azure OpenAI (OBRIGATÓRIO para IA)
AZURE_OPENAI_ENDPOINT=https://arcsat-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=sua_chave_azure_openai_aqui
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Identity (Alternativa)
AZURE_CLIENT_ID=sua_client_id_azure
AZURE_CLIENT_SECRET=sua_client_secret_azure
AZURE_TENANT_ID=sua_tenant_id_azure

# Servidor
PORT=5000
NODE_ENV=production
API_VERSION=v1

# MongoDB (Em produção)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/arcsat-industrial
MONGODB_DB_NAME=arcsat_industrial

# JWT (Autenticação)
JWT_SECRET=sua_chave_secreta_super_forte_aqui
JWT_EXPIRES_IN=24h

# Email (Notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@arcsat.com.br
SMTP_PASS=sua_senha_email

# Integrações Industriais
RECEITA_WS_API_KEY=sua_chave_receita_ws
INTEGRATION_WEBHOOK_SECRET=webhook_secret_industrial

# Especialização por Setor
LEAN_MANUFACTURING_ENABLED=true
ISO_COMPLIANCE_ENABLED=true
INDUSTRY_40_ENABLED=true
SAFETY_MANAGEMENT_ENABLED=true

# KPIs e Métricas
OEE_CALCULATION_ENABLED=true
REAL_TIME_MONITORING=true
DASHBOARD_REFRESH_INTERVAL=30000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/arcsat-industrial.log

# Backup e Segurança
BACKUP_INTERVAL_HOURS=24
ENCRYPTION_KEY=chave_criptografia_dados
DATA_RETENTION_DAYS=2555

# URLs e Endpoints
FRONTEND_URL=https://arcsat.com.br
API_BASE_URL=https://api.arcsat.com.br
WEBHOOK_BASE_URL=https://webhooks.arcsat.com.br

# Recursos Azure (Opcinal - para escalabilidade)
AZURE_STORAGE_ACCOUNT=arcsatstorage
AZURE_STORAGE_CONTAINER=industrial-docs
AZURE_FUNCTIONS_URL=https://arcsat-functions.azurewebsites.net

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Desenvolvimento
DEBUG_MODE=false
DEVELOPMENT_CORS_ORIGIN=http://localhost:3000
DEVELOPMENT_MODE=false