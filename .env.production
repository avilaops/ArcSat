# Production Environment Variables

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id

# Cosmos DB
MONGODB_URI=@Microsoft.KeyVault(SecretUri=https://arcsat-kv.vault.azure.net/secrets/mongodb-uri)
MONGODB_DATABASE=arcsat

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=@Microsoft.KeyVault(SecretUri=https://arcsat-kv.vault.azure.net/secrets/storage-connection)
AZURE_STORAGE_CONTAINER=uploads

# Authentication
JWT_SECRET=@Microsoft.KeyVault(SecretUri=https://arcsat-kv.vault.azure.net/secrets/jwt-secret)
ENTRA_ID_CLIENT_ID=@Microsoft.KeyVault(SecretUri=https://arcsat-kv.vault.azure.net/secrets/entra-client-id)
ENTRA_ID_CLIENT_SECRET=@Microsoft.KeyVault(SecretUri=https://arcsat-kv.vault.azure.net/secrets/entra-client-secret)

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=@Microsoft.KeyVault(SecretUri=https://arcsat-kv.vault.azure.net/secrets/appinsights-connection)

# API Configuration
API_URL=https://api.arcsat.com.br
APP_URL=https://app.arcsat.com.br
AUTH_URL=https://auth.arcsat.com.br

# Features
ENABLE_WEBHOOKS=true
ENABLE_OAUTH=true
MULTI_TENANT=true

# Security
NODE_ENV=production
SSL_ENABLED=true
CORS_ORIGINS=["https://app.arcsat.com.br", "https://api.arcsat.com.br"]

# Static Web App Configuration
AZURE_STATICWEBAPP_NAME=arcsat-frontend
AZURE_RESOURCE_GROUP=Avila
AZURE_HOSTNAME=arcsat.com.br